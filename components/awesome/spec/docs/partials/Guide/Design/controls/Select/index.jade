extends ../../../layout



block b-page
    section

        article(ng-controller="ControlsSelectExampleCtrl")

            h2 Для коротких списков

            figure(ng-controller="ControlsSelectExample1Ctrl")
                div.ctrl
                    span Выберите одно значение...

                    ae-select(
                        ae-select-data="data",
                        ng-model="selection"
                    )

                small
                    b{{selection}}
                    a(ng-click="changeModel()")
                        |— 
                        u изменить модель

            figure(ng-controller="ControlsSelectExample2Ctrl")
                div.ctrl
                    span Выберите несколько значений...

                    ae-select(
                        ae-select-data="data",
                        ng-model="selection",
                        multiple
                    )

                small
                    b{{selection}}
                    a(ng-click="changeModel()")
                        |— 
                        u изменить модель
                hr
                div.ctrl
                    span Выберите из выбранного...

                    ae-select(
                        ae-select-data="selection",
                        ng-model="selection1"
                    )

                small
                    b{{selection1}}
